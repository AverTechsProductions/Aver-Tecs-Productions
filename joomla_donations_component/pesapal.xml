<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.9" method="upgrade">
    <name>com_pesapal</name>
    <creationDate>December 2020</creationDate>
	<author>Victor Wambua</author>
	<authorEmail>wambuavictor98@gmail.com</authorEmail>
	<authorUrl>www.victorwambua.cf</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<version>1.0.0</version>
    <description>COM_PESAPAL_XML_DESCRIPTION</description>
    <install>
        <sql>
            <file driver="mysql"
                  charset="utf8">sql/install.mysql.utf8.sql
            </file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql"
                  charset="utf8">sql/uninstall.mysql.utf8.sql
            </file>
        </sql>
    </uninstall>
    <files folder="site">
        <filename>index.html</filename>
        <filename>pesapal.php</filename>
        <filename>controller.php</filename>
        <folder>views</folder>
        <folder>scripts</folder>
        <folder>css</folder>
        <folder>models</folder>
    </files>
    <administration>
        <menu link='index.php?option=com_donationcomponent'>Joomla Pesapal Donation Component.</menu>
        <menu img="class:categories">COM_PESAPAL_MENU</menu>
        <files folder="admin">
            <filename>index.html</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>pesapal.php</filename>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>scripts</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>css</folder>
        </files>
        <languages folder="admin">
            <language tag="en-GB">language/en-GB/en-GB.com_pesapal.ini
            </language>
            <language tag="en-GB">language/en-GB/en-GB.com_pesapal.sys.ini
            </language>
        </languages>
    </administration>
</extension>